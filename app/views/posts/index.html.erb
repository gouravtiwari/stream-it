<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-8 blog-main">
    <% @posts.each do |post| %>
      <div class="blog-post">
        <h2 class="blog-post-title"><%= link_to post.title, post %></h2>
        <p class="blog-post-meta"><%= post.created_at.strftime('%B %d, %Y')%> by <a href="#">Gourav</a></p>
        <div><%= post.body %></div>
        <div>
          <span><%= link_to 'Edit', edit_post_path(post) %></span> |
          <span><%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        </div>
      </div>
    <% end %>

    <nav class="blog-pagination">
      <a class="btn btn-outline-primary" href="#">Older</a>
      <a class="btn btn-outline-secondary disabled" href="#">Newer</a>
    </nav>
  </div>

